# ðŸŽ¯ PRODUCTION DEVELOPMENT ENVIRONMENT
NODE_ENV=production
BUILD_MODE=prod
EXCLUDE_PRODUCTION_FILES=false
TURBO_MODE=production

# Production optimizations
FAST_REFRESH=false
HOT_RELOAD=false
DEV_TOOLS=false

# Production-specific settings
ENABLE_POSE_DETECTION=true
ENABLE_THERMAL_MONITORING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ADVANCED_CONTROLS=true

# AI API Configuration
GEMINI_API_KEY=your_prod_api_key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
DEFAULT_VOICE_NAME=Sadachbia

# AI Analysis Mode: 'real' for actual API calls, 'mock' for prepared responses (MVP testing)
AI_ANALYSIS_MODE=real

# Pipeline Stages Configuration
# JSON configuration for which pipeline stages to run (applies to both real and mock modes)
# Production mode: run all stages by default
# Example: {"runVideoAnalysis": true, "runLLMFeedback": true, "runSSML": true, "runTTS": true}
PIPELINE_STAGES={"runVideoAnalysis": true, "runLLMFeedback": true, "runSSML": true, "runTTS": true}

# TTS Audio Format Configuration
# Default audio format for TTS generation (mp3, aac)
TTS_DEFAULT_FORMAT=wav
# Comma-separated list of allowed audio formats for TTS
TTS_ALLOWED_FORMATS=wav
SUPABASE_SIGNED_URL_TTL_SECONDS=900
# TTS System Instruction for voice personality control
# Instructions for the AI model on how to deliver the speech (e.g., accent, tone, style)
TTS_SYSTEM_INSTRUCTION=Use a funny north european accent.

# iOS Build Configuration
# Apple Developer Team ID (required for iOS builds)
# Get your Team ID from https://developer.apple.com/account â†’ Membership
# This is a sensitive identifier - never commit actual values to version control
# Set this in your CI/CD environment variables or secure secret management system
APPLE_TEAM_ID=your-apple-team-id-here

# Test Authentication (DISABLED in production)
# These variables are ignored in production builds due to build-time guards
# They are included here for completeness but should never be enabled in production
TEST_AUTH_ENABLED=false
# TEST_AUTH_EMAIL=  # Intentionally left empty for production
# TEST_AUTH_PASSWORD=  # Intentionally left empty for production
