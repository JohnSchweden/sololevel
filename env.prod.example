# ðŸŽ¯ PRODUCTION DEVELOPMENT ENVIRONMENT
NODE_ENV=production
BUILD_MODE=prod
EXCLUDE_PRODUCTION_FILES=false
TURBO_MODE=production

# Production optimizations
FAST_REFRESH=false
HOT_RELOAD=false
DEV_TOOLS=false

# Production-specific settings
ENABLE_POSE_DETECTION=true
ENABLE_THERMAL_MONITORING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ADVANCED_CONTROLS=true

# AI API Configuration
GEMINI_API_KEY=your_prod_api_key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
DEFAULT_VOICE_NAME=Sadachbia

# AI Analysis Mode: 'real' for actual API calls, 'mock' for prepared responses (MVP testing)
AI_ANALYSIS_MODE=real

# TTS Audio Format Configuration
# Default audio format for TTS generation (mp3, aac)
SUPABASE_TTS_DEFAULT_FORMAT=aac
# Comma-separated list of allowed audio formats for TTS
SUPABASE_TTS_ALLOWED_FORMATS=aac,mp3
