# ðŸš€ MVP DEVELOPMENT ENVIRONMENT
NODE_ENV=development
BUILD_MODE=mvp
EXCLUDE_PRODUCTION_FILES=true
TURBO_MODE=mvp

# Development optimizations
FAST_REFRESH=true
HOT_RELOAD=true
DEV_TOOLS=true

# MVP-specific settings
ENABLE_POSE_DETECTION=false
ENABLE_THERMAL_MONITORING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ADVANCED_CONTROLS=false

# AI API Configuration
GEMINI_API_KEY=your_dev_api_key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
DEFAULT_VOICE_NAME=Sadachbia

# AI Analysis Mode: 'real' for actual API calls, 'mock' for prepared responses (MVP testing)
AI_ANALYSIS_MODE=mock

# Pipeline Stages Configuration
# JSON configuration for which pipeline stages to run (applies to both real and mock modes)
# Development mode: only run video analysis to persist results faster
# Example: {"runVideoAnalysis": true, "runLLMFeedback": false, "runSSML": false, "runTTS": false}
PIPELINE_STAGES={"runVideoAnalysis": true, "runLLMFeedback": false, "runSSML": false, "runTTS": false}

# TTS Audio Format Configuration
# Default audio format for TTS generation (mp3, aac)
TTS_DEFAULT_FORMAT=wav
# Comma-separated list of allowed audio formats for TTS
TTS_ALLOWED_FORMATS=wav
SUPABASE_SIGNED_URL_TTL_SECONDS=900
# TTS System Instruction for voice personality control
# Instructions for the AI model on how to deliver the speech (e.g., accent, tone, style)
TTS_SYSTEM_INSTRUCTION=Use a funny north european accent.

# iOS Build Configuration
# Apple Developer Team ID (required for iOS builds)
# Get your Team ID from https://developer.apple.com/account â†’ Membership
# This is a sensitive identifier - never commit actual values to version control
APPLE_TEAM_ID=your-apple-team-id-here

# Test Authentication (for development/testing)
# Enable automatic authentication for testing purposes
# Set to 'true' to enable automatic sign-in during development
TEST_AUTH_ENABLED=true
TEST_AUTH_EMAIL=dev@example.com
TEST_AUTH_PASSWORD=dev-password-123
