export const Grid = styled(XStack, {
  flexWrap: "wrap",
  margin: "-$sm",
  
  variants: {
    columns: {
      2: {
        "& > *": {
          padding: "$sm",
          minWidth: "50%"
        }
      },
      3: {
        "& > *": {
          padding: "$sm",
          minWidth: "33.333%",
          $sm: { minWidth: "50%" },
          $xs: { minWidth: "100%" }
        }
      },
      4: {
        "& > *": {
          padding: "$sm",
          minWidth: "25%",
          $md: { minWidth: "50%" },
          $sm: { minWidth: "100%" }
        }
      }
    }
  }
})
