{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assists": { "actions": { "source": { "sortJsxProps": "off" } } },
  "linter": {
    "enabled": true,
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "ignore": [
      "**/coverage/**",
      "**/node_modules/**",
      "**/ios/Pods/**",
      "**/ios/build/**",
      "**/ios/**/Intermediates.noindex/**",
      "**/android/**",
      "**/.expo/**",
      "**/supabase/functions/**",
      "**/usePoseMetrics.ts",
      "**/usePoseState.ts",
      "**/poseConfigManager.ts",
      "**/poseStateIntegrationTest.ts",
      "**/poseStatePersistence.ts",
      "**/storeEnhancementMigration.ts",
      "**/cameraRecordingEnhanced.ts",
      "**/enhancedCameraStore.ts",
      "**/performanceStore.ts",
      "**/useAdaptiveQuality.ts",
      "**/useEnhancedZoom.ts",
      "**/useEnhancedCameraSwap.ts",
      "**/useThermalMonitoring.native.ts",
      "**/useFrameProcessing.ts",
      "**/useFrameProcessor.native.ts",
      "**/useCameraFrameProcessor.web.ts",
      "**/usePoseDetection.native.ts",
      "**/usePoseDetection.web.ts",
      "**/poseProcessing.native.ts",
      "**/poseDetection.web.ts",
      "**/PerformanceMonitor.tsx",
      "**/ThermalIndicator.tsx",
      "**/CameraSwapButton.tsx",
      "**/pose.ts",
      "**/enhanced-state.ts",
      "**/performance.ts",
      "**/thermal.ts",
      "**/cross-platform-state.ts",
      "**/poseDetectionConfig.ts",
      "**/poseDataBuffer.ts",
      "**/poseDataExport.ts",
      "**/poseDataValidation.ts",
      "**/poseThermalIntegration.ts",
      "**/storeMigration.ts",
      "**/cameraRecording.ts.backup.prod",
      "**/useCameraPermissions.native.ts.backup.prod",
      "**/useCameraScreenLogic.ts.backup.prod",
      "**/useRecordingStateMachine.ts.backup.prod",
      "**/poseStore.ts",
      "**/logger.ts"
    ],

    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noInnerDeclarations": "off",
        "noConstructorReturn": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noConfusingVoidType": "off",
        "noEmptyInterface": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noDoubleEquals": "off",
        "noAssignInExpressions": "off",
        "noRedeclare": "off",
        "noConsole": { "level": "error", "options": { "allow": ["log"] } }
      },
      "style": {
        "noParameterAssign": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off",
        "useDefaultParameterLast": "off",
        "useConst": "off",
        "useEnumInitializers": "off",
        "useTemplate": "off",
        "useSelfClosingElements": "off",
        "useImportType": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off",
        "noDangerouslySetInnerHtmlWithChildren": "off"
      },
      "performance": {
        "noDelete": "off",
        "noAccumulatingSpread": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off",
        "noUselessFragments": "off",
        "useLiteralKeys": "off",
        "useSimplifiedLogicExpression": "off",
        "useOptionalChain": "off",
        "noStaticOnlyClass": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useMediaCaption": "off",
        "noHeaderScope": "off",
        "useAltText": "off",
        "useButtonType": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "attributePosition": "multiline",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "ignore": [
      "**/coverage/**",
      "**/node_modules/**",
      "**/ios/Pods/**",
      "**/ios/build/**",
      "**/ios/**/Intermediates.noindex/**",
      "**/android/**",
      "**/.expo/**",
      "**/supabase/functions/**",
      "**/usePoseMetrics.ts",
      "**/usePoseState.ts",
      "**/poseConfigManager.ts",
      "**/poseStateIntegrationTest.ts",
      "**/poseStatePersistence.ts",
      "**/storeEnhancementMigration.ts",
      "**/cameraRecordingEnhanced.ts",
      "**/enhancedCameraStore.ts",
      "**/performanceStore.ts",
      "**/useAdaptiveQuality.ts",
      "**/useEnhancedZoom.ts",
      "**/useEnhancedCameraSwap.ts",
      "**/useThermalMonitoring.native.ts",
      "**/useFrameProcessing.ts",
      "**/useFrameProcessor.native.ts",
      "**/useCameraFrameProcessor.web.ts",
      "**/usePoseDetection.native.ts",
      "**/usePoseDetection.web.ts",
      "**/poseProcessing.native.ts",
      "**/poseDetection.web.ts",
      "**/PerformanceMonitor.tsx",
      "**/ThermalIndicator.tsx",
      "**/CameraSwapButton.tsx",
      "**/pose.ts",
      "**/enhanced-state.ts",
      "**/performance.ts",
      "**/thermal.ts",
      "**/cross-platform-state.ts",
      "**/poseDetectionConfig.ts",
      "**/poseDataBuffer.ts",
      "**/poseDataExport.ts",
      "**/poseDataValidation.ts",
      "**/poseThermalIntegration.ts",
      "**/storeMigration.ts",
      "**/cameraRecording.ts.backup.prod",
      "**/useCameraPermissions.native.ts.backup.prod",
      "**/useCameraScreenLogic.ts.backup.prod",
      "**/useRecordingStateMachine.ts.backup.prod",
      "**/poseStore.ts",
      "**/logger.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "maxSize": 3145728,
    "ignoreUnknown": true
  }
}
