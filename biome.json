{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "off" } } },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/.tamagui",
      "!**/*/ios/**",
      "!**/.vscode",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tamagui.css",
      "!**/*.d.ts",
      "!**/packages/vendor/**",
      "!**/packages/**/vendor/**",
      "!**/tsconfig.json",
      "!**/dist/**",
      "!**/package.json",
      "!**/.codesandbox",
      "!**/tsconfig.base.json",
      "!**/types/database.ts",
      "!**/*.md",
      "!**/*.mdc",
      "!**/*.yml",
      "!**/*.yaml",
      "!**/*.json",
      "!**/*.lock",
      "!**/*.log",
      "!**/*.txt",
      "!**/*.sql",
      "!**/*.toml",
      "!**/*.cjs",
      "!**/*.mjs"
    ],

    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noInnerDeclarations": "off",
        "noConstructorReturn": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noConfusingVoidType": "off",
        "noEmptyInterface": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noDoubleEquals": "off",
        "noAssignInExpressions": "off",
        "noRedeclare": "off",
        "noConsole": { "level": "error", "options": { "allow": ["log"] } }
      },
      "style": {
        "noParameterAssign": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off",
        "useDefaultParameterLast": "off",
        "useConst": "off",
        "useEnumInitializers": "off",
        "useTemplate": "off",
        "useSelfClosingElements": "off",
        "useImportType": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off",
        "noDangerouslySetInnerHtmlWithChildren": "off"
      },
      "performance": {
        "noDelete": "off",
        "noAccumulatingSpread": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off",
        "noUselessFragments": "off",
        "useLiteralKeys": "off",
        "useSimplifiedLogicExpression": "off",
        "useOptionalChain": "off",
        "noUselessContinue": "off",
        "noArguments": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useMediaCaption": "off",
        "noHeaderScope": "off",
        "useAltText": "off",
        "useButtonType": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "attributePosition": "multiline",
    "includes": [
      "**",
      "!**/.tamagui",
      "!**/ios/**",
      "!**/.vscode",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tamagui.css",
      "!**/*.d.ts",
      "!**/packages/vendor/**",
      "!**/packages/**/vendor/**",
      "!**/tsconfig.json",
      "!**/dist/**",
      "!**/package.json",
      "!**/.codesandbox",
      "!**/tsconfig.base.json",
      "!**/types/database.ts",
      "!**/*.md",
      "!**/*.mdc",
      "!**/*.yml",
      "!**/*.yaml",
      "!**/*.json",
      "!**/*.lock",
      "!**/*.log",
      "!**/*.txt",
      "!**/*.sql",
      "!**/*.toml",
      "!**/*.cjs",
      "!**/*.mjs"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "maxSize": 3145728,
    "ignoreUnknown": true
  }
}
