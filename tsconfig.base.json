{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@ui/*": ["./packages/ui/src/*"],
      "@app/*": ["./packages/app/*"],
      "@api/*": ["./packages/api/*"],
      "@config/*": ["./packages/config/src/*"],
      "@logging/*": ["./packages/logging/src/*"]
    },
    "importHelpers": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "incremental": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    "preserveConstEnums": true,
    // DONT DO THIS so jsdoc will remain
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es2020",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "exclude": [
    "_",
    "supabase/functions/**"
  ],
  "typeAcquisition": {
    "enable": true
  }
}